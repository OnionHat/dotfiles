set $mod Mod4
set $alt Mod1
set $scripts ~/.config/i3/scripts
set $myEmacs emacsclient -nc -a 'emacs'

font pango:monospace 9

# Autostart programs
exec_always ~/.local/bin/i3-layouts
exec_always xsetroot -cursor_name left_ptr

# Swap current window with master
bindsym $mod+Return exec $scripts/i3-swap-master

# COSTUME KEYBINDINGS
# Mediakeys
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pulsemixer --unmute --change-volume +5 --max-volume 100 && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pulsemixer --unmute --change-volume -5 && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pulsemixer --toggle-mute && $refresh_i3status

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

# Dmenu
# Find container
bindsym $mod+Shift+f exec --no-startup-id  $HOME/.config/i3/scripts/i3-container-commander.py

# Screenshot
bindsym $mod+Shift+s exec --no-startup-id flameshot gui

# Emacs
bindsym $mod+e exec --no-startup-id $myEmacs; mode "default"
bindsym $mod+Shift+e exec --no-startup-id systemctl restart --user emacs && notify-send 'EMACS' 'Daemon restart: SUCCESSFULLY' \
                                        || notify-send 'EMACS' 'Daemon restart: UNSUCCESSFULLY' -u critical; mode "default"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Shift+Return exec kitty

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu (a program launcher)
bindsym $mod+p exec --no-startup-id dmenu_run

# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left

# move focused window
bindsym $mod+Shift+j exec ~/.local/bin/i3l move down
bindsym $mod+Shift+k exec ~/.local/bin/i3l move up
bindsym $mod+Shift+l exec ~/.local/bin/i3l move right
bindsym $mod+Shift+h exec ~/.local/bin/i3l move left

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Layouts - i3-layouts
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $alt+Tab focus mode_toggle

bindsym $mod+Tab workspace back_and_forth

# Workspaces and windows
bindsym $mod+comma focus output left
bindsym $mod+period focus output right

bindsym $mod+Shift+comma move container to output left
bindsym $mod+Shift+period move container to output right

bindsym $mod+Control+comma move workspace to output right && foucs output right
bindsym $mod+Control+period move workspace to output right && foucs output right

# focus the child container
bindsym $mod+x exec betterlockscreen -l dimblur

# floating volume panal
bindsym $mod+v exec --no-startup-id "kitty --title volume_controll --override font_size=12 pulsemixer"

bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Ctrl+Shift+q exec "i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# I3layouts
set $i3l 3columns to workspace $ws1
# set $i3l vstack to workspace $ws2
set $i3l 3columns to workspace $ws3
set $i3l 3columns to workspace $ws4
set $i3l 3columns to workspace $ws5
set $i3l 3columns to workspace $ws6
set $i3l 3columns to workspace $ws7
set $i3l 3columns to workspace $ws8
set $i3l 3columns to workspace $ws9

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

default_floating_border pixel 10

# Gaps
gaps inner 15
gaps horizontal 960
gaps vertical 5
smart_gaps inverse_outer
smart_borders on


# Window rules
for_window [class="^.*"] border pixel 2
for_window [class="steam_app_1182480"] floating enable
for_window [title="Origin"] floating enable
# https://github.com/ValveSoftware/steam-for-linux/issues/1040
for_window [class="Steam" title="Friends List"] floating enable
for_window [class="Steam" title="Steam - News"] floating enable
for_window [class="Steam" title=".* - Chat"] floating enable
for_window [class="Steam" title="Settings"] floating enable
for_window [class="Steam" title=".* - event started"] floating enable
for_window [class="Steam" title=".* CD key"] floating enable
for_window [class="Steam" title="Steam - Self Updater"] floating enable
for_window [class="Steam" title="Screenshot Uploader"] floating enable
for_window [class="Steam" title="Steam Guard - Computer Authorization Required"] floating enable
for_window [title="Steam Keyboard"] floating enable
for_window [class="SpeedCrunch"] floating enable resize set 640 480
for_window [title="volume_controll"] floating enable resize set 640 480
