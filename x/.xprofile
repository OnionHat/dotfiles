#!/bin/sh
export ZDOTDIR=$HOME/.config/zsh

xrandr --output DVI-D-0 --mode 1920x1080 --output HDMI-0 --mode 1920x1080 --left-of DVI-D-0
xsetroot -cursor_name left_ptr
xdotool mousemove 2880 540
#setxkbmap -option 'caps:ctrl_modifier'
setxkbmap no nodeadkeys -option 'caps:ctrl_modifier'
xcape -e 'Caps_Lock=Escape'

dwmblocks &
picom --experimental-backends &
nitrogen --restore &

nm-applet &
pa-applet &
flameshot &

redshift -l 59.93:10.96 -t 6500:4500 &

# connect to my UIO server
wget -q --spider http://gnu.org
while :
do 
	if [ $? -eq 0 ]; then
		sshfs -o reconnect,uid=1000,gid=984,ServerAliveInterval=15,ServerAliveCountMax=3 suleymab@login.ifi.uio.no:privat $HOME/uio
		break
	else
		sleep 5
	fi
done
