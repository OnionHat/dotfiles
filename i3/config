# COSTUME KEYBINDINGS
# Mediakeys
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pulsemixer --change-volume +5 --max-volume 100 && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pulsemixer --change-volume -5 && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pulsemixer --toggle-mute && $refresh_i3status

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

# Workspaces and windows
bindsym $mod+comma focus output left
bindsym $mod+period focus output right

bindsym $mod+Shift+comma move container to output left
bindsym $mod+Shift+period move container to output right

bindsym $mod+Control+comma move workspace to output right && foucs output right
bindsym $mod+Control+period move workspace to output right && foucs output right

bindsym $mod+Ctrl+r exec --no-startup-id i3-input -F 'rename workspace to "%s"' -P 'New name: '

# Dmenu
# Find container
bindsym $mod+Shift+f exec --no-startup-id  $HOME/.config/i3/scripts/i3-container-commander.py

# Screenshot
bindsym $mod+Shift+s exec --no-startup-id flameshot gui

# Emacs
bindsym $mod+m exec --no-startup-id "emacsclient -nc"
bindsym $mod+Shift+m exec --no-startup-id systemctl restart --user emacs && notify-send 'EMACS' 'Daemon restart: SUCCESSFULLY' \
                                            || notify-send 'EMACS' 'Daemon restart: UNSUCCESSFULLY' -u critical
